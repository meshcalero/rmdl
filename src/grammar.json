{
	"lex": {
		"macros": {
            "digit": "[0-9]",
            "esc": "\\\\",
            "int": "-?(?:[0-9]|[1-9][0-9]+)",
            "exp": "(?:[eE][-+]?[0-9]+)",
            "frac": "(?:\\.[0-9]+)",
            "char": "[A-Za-z_]",
            "charDigit": "[0-9A-Za-z_]"
        },
		"rules": [
			["\\s+", "/* skip whitespace */"],
            ["{int}{frac}?{exp}?\\b", "return 'NUMBER';"],
            ["\"(?:{esc}[\"bfnrt/{esc}]|{esc}u[a-fA-F0-9]{4}|[^\"{esc}])*\"", "yytext = yytext.substr(1,yyleng-2); return 'STRING';"],
            ["\\(", "return '('"],
            ["\\)", "return ')'"],
            ["\\{", "return '{'"],
            ["\\}", "return '}'"],
            ["\\[", "return '['"],
            ["\\]", "return ']'"],
            [",", "return ','"],
            [":", "return ':'"],
            ["null\\b", "return 'NULL'"],
			["PACKAGE\\b","return 'PACKAGE'"],
			["DEPENDENCY\\b", "return 'DEPENDENCY'"],
			["TYPE\\b", "return 'TYPE'"],
			["PARAM\\b", "return 'PARAM'"],
			["ELEMENT\\b", "return 'ELEMENT'"],
			["{char}{charDigit}*", "return 'IDENTIFIER'"]
		]
	},
	
	"tokens": "PACKAGE DEPENDENCY TYPE PARAM ELEMENT IDENTIFIER STRING NUMBER ( ) { } [ ] , : NULL",
	
	"start": "RmdlLine",
	
	"bnf": {
		"RmdlLine": [
			[ "LineOptions",						"return $$ = $1;" ]
		],
		
		"LineOptions": [
			[ "PACKAGE PackageDecl", 				"$$ = $2;"],
			[ "DEPENDENCY Dependency",				"$$ = $2;"],
			[ "TYPE TypeDecl",						"$$ = $2;"],
			[ "ELEMENT ElementDecl",				"$$ = $2;"],
			[ "PARAM ParameterDecl",				"$$ = $2;"]
		],
		
		"PackageDecl": [ 
			[ "IDENTIFIER", 						"$$ = { packageType: 'package', name: $1 };"],
			[ "IDENTIFIER : TypeReference", 		"$$ = { packageType: 'resource', name: $1, baseType: $3 };"],
			[ "IDENTIFIER : TypeReference Options", "$$ = { packageType: 'resource', name: $1, baseType: $3, options: $4 };"],
			[ "IDENTIFIER Options", 				"$$ = { packageType: 'package', name: $1, options: $2 };"]
		],
		
		"Dependency": [
			[ "STRING",								"$$ = { dependencyUri : $1 };" ],
			[ "STRING Options",						"$$ = { dependencyUri : $1, options: $2 };" ]
		],
		
		"TypeDecl": [
			[ "IDENTIFIER",							"$$ = { name : $1, baseType: { refType: 'type', name: 'Record' } };" ],
			[ "IDENTIFIER : TypeReference",			"$$ = { name : $1, baseType: $3 };" ],
			[ "IDENTIFIER : TypeReference Options",	"$$ = { name : $1, baseType: $3, options: $4 };" ],
			[ "IDENTIFIER Options",					"$$ = { name : $1, baseType: { refType: 'type', name: 'Record' }, options: $4 };" ]
		],
		
		"ElementDecl": [
			[ "IDENTIFIER",							"$$ = { name : $1, type: { refType: 'type', name: 'Identifier' } };" ],
			[ "IDENTIFIER : TypeReference",			"$$ = { name : $1, type: $3 };" ],
			[ "IDENTIFIER : TypeReference Options",	"$$ = { name : $1, type: $3, options: $4 };" ],
			[ ": TypeReference",					"$$ = { type: $2 };" ]
		],
		
		"ParameterDecl": [
			[ "IDENTIFIER : TypeReference",			"$$ = { name : $1, type: $3 };" ],
			[ "IDENTIFIER : TypeReference Options",	"$$ = { name : $1, type: $3, options: $4 };" ]
		],
		
		"TypeReference": [
			[ "IDENTIFIER", 						"$$= { refType: 'type', name: $1 };" ],
			[ "IDENTIFIER [ ]", 					"$$= { refType: 'type', name: $1 };" ],
			[ "IDENTIFIER [ KeyValueList ]", 		"$$= { refType: 'type', name: $1, params: $3 };" ]
		],

		"Options":[
			[ "( )",								"$$ = null;" ],
			[ "( KeyValueList )",					"$$ = $2;" ]
		],
		
		"KeyValueList":[
			[ "KeyValue",							"$$ = [ $1 ]" ],
			[ "KeyValueList , KeyValue",			"$$ = $1.concat([$3]);" ] 
		],
		
		"KeyValue":[
			[ "Key",								"$$ = { itemType: 'keyValue', key: $1, value: { valueType: 'boolean', value: true } };" ],
			[ "Key : Value",						"$$ = { itemType: 'keyValue', key: $1, value: $3 };" ]
		],
		
		"Key": [
			[ "QualifiedIdentifier",							"$$ = $1;" ]
		],
		
		"KeyOrValue":[
			[ "Value",								"$$ = { itemType: ($1.valueType=='identifier'?'keyOrValue':'value'), value : $1.value };" ]
		],
		
		"Value":[
			[ "NUMBER",								"$$ = { valueType: 'number', value: Number(yytext)};" ],
			[ "STRING",								"$$ = { valueType: 'string', value: yytext };" ],
			[ "Boolean",							"$$ = { valueType: 'boolean', value: $1 };"],
			[ "NULL",								"$$ = { valueType: 'null' };" ],
			[ "QualifiedIdentifier",				"$$ = { valueType: 'identifier', value: $1 };" ],
			[ "IDENTIFIER [ ]", 					"$$ = { valueType: 'reference', value: { refType: 'type', name: $1 } };" ],
			[ "IDENTIFIER [ KeyValueList ]", 		"$$ = { valueType: 'reference', value: { refType: 'type', name: $1, params: $3 } };" ]
		],
		
		"Boolean":[
			[ "TRUE",								"$$ = true;" ],
			[ "FALSE",								"$$ = false;" ]
		],
		
		"QualifiedIdentifier":[
			[ "IDENTIFIER",							"$$ = $1;" ],
			[ "QualifiedIdentifier . IDENTIFIER",	"$$ = $1 + '.' + $2;" ]
		]
	}
}